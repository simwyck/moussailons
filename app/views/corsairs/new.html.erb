<h1>New Gossip</h1>

<%= form_for @gossip do |f| %>

  <div class="form-group">

    <label>Gossip Author</label>

    <%= f.text_field :anonymous_author, class: 'form-control' %>

  </div>

  <div class="form-group">

    <label>Gossip Content</label>

    <%= f.text_area :content, class: 'form-control' %>

  </div>

  <div class="form-group">

    <button type="submit">Create Gossip</button>

  </div>

<% end %>
